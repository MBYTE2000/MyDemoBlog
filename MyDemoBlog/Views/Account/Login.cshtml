@{
    Layout = "_Layout";
}
@model LoginViewModel
<div class="align-baseline center login-box bg-black">
    <h1 class="fittext2">Вход в личный кабинет</h1>
    <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnurl="@ViewBag.returnurl">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Login"></label>
            <input asp-for="Login"/>
            <span asp-validation-for="Login"></span>
        </div>
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" class="left-align"/>
            <span asp-validation-for="RememberMe"></span>
        </div>
        <div>
            <input type="submit" value="Войти"/>
        </div>
    </form>
</div>